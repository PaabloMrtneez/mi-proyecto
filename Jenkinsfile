pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'echo "Construyendo..."'
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Ejecutando pruebas..."'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "Desplegando..."'
            }
        }
    }
}
